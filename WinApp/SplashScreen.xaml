<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Windows.SplashScreen"
    Height="126" Width="418" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" BorderThickness="1" BorderBrush="Gray">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="#FFFFFFFF" Offset="0.018"/>
			<GradientStop Color="#FFCACFDC" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
    <Grid>
        <TextBlock Margin="133,0,12,84" x:Name="AppNameLabel" FontFamily="Segoe UI" FontSize="24" FontStyle="Italic" FontWeight="Bold" Foreground="#FF412A00" Text="Railroad Automation" TextWrapping="Wrap" Height="29" VerticalAlignment="Bottom" />
        <TextBlock Margin="133,0,12,45" x:Name="StatusLabel" Text="Loading..." Height="18" VerticalAlignment="Bottom" />
        <ProgressBar Margin="128,0,12,12" x:Name="StatusBar" Foreground="#BA7800" Background="WhiteSmoke" VerticalAlignment="Bottom" Height="28" />
        <Image Margin="12,0,0,12" Stretch="Fill" Source="/RRAuto;component/Resources/RRAuto.png" RenderOptions.BitmapScalingMode="HighQuality" Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
    </Grid>
</Window>
